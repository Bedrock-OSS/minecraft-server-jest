{
    "name": "@bedrock-oss/minecraft-server-jest",
    "version": "0.0.4",
    "description": "Typed Jest mock for @minecraft/server",
    "main": "./dist/register.js",
    "module": "./dist/register.mjs",
    "types": "./dist/register.d.ts",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Bedrock-OSS/minecraft-server-jest.git"
    },
    "exports": {
        ".": {
            "require": "./dist/register.js",
            "import": "./dist/register.mjs",
            "types": "./dist/register.d.ts"
        },
        "./jest-preset": "./dist/jest-preset.js",
        "./mock": "./mock.js"
    },
    "files": [
        "dist",
        "jest-preset.js",
        "dist/mock.js",
        "mock.js"
    ],
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "tsup src/register.ts src/jest-preset.ts src/mock.ts --format cjs,esm --dts",
        "generate:enums": "node scripts/extract-enums.js",
        "prepublishOnly": "npm run build",
        "format": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx,json}\"",
        "test": "jest"
    },
    "devDependencies": {
        "@minecraft/server": "latest",
        "jest": "^29.7.0",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "tsup": "^7.2.0",
        "typescript": "^5"
    },
    "peerDependencies": {
        "jest": ">=29"
    }
}
